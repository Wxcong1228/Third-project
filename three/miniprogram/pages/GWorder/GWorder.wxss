.order {
  width: 100vw;
  height: 100vh;
}
.order-address {
  display: flex;
  width: 100vw;
  height: 65px;
  /* line-height: 65px; */
  position: relative;
  margin-top: 10px;
  border-radius: 10px;
  background-color: #fff;
}
.order-icon2 {
  position: absolute;
  top: 35%;
  right: 15px;
  margin: auto 0;
}
.order-icon1 {
  margin-left: 10px;
  line-height: 65px;
}
.order-text {
  margin-left: 10px;
  
}

.order-product {
  width: 100vw;
  background-color: #fff;
  margin-top: 10px;
  border-radius: 10px;
  position: relative;
}
.order-product-content {
  width: 100vw;
  display: flex;
}
.order-product-pic {
  width: 30vw;
}
.order-product-pic image {
  width: 100%;
  height: 96px;
}
.order-product-name {
  width: 55vw;
  padding-top: 10px;
}
.border-box {
  display: flex;
  font-size: 20rpx;
  margin-top: 10px;
}
.border {
  color: #e08f65;
  border: 1rpx solid #e08f65;
  padding: 1px;
  border-radius: 2px;
}
.border1 {
  color: #e08f65;
  margin-left: 5px;
  padding: 1px;
  border: 1rpx solid #e08f65;
  border-radius: 2px;
}

.order-product-price {
  width: 25vw;
}
.order-price {
  margin-top: 10px;
}
.order-add {
  display: flex;
  margin-top: 20px;
}
.add-count {
  font-size: 20px;
}
.count {
  width: 30px;
  text-align: center;
  padding-top: 4px;
}
.item1 {
  width: 100vw;
  height: 50px;
  display: flex;
  line-height: 50px;
  padding: 0 10px;
  box-sizing: border-box;
  font-size: 13px;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
}
.order-footer{
  width: 100vw;
  height: 50px;
  display: flex;
  position: fixed;
  bottom: 0;
  line-height: 50px;
  justify-content: flex-end;
  background-color: #fff;
}
.footer-total {
  margin-right: 10px;
}
.footer-submit {
  padding: 0 10px;
  color: #fff;
  background-color: #ee7d31;
}
.message {
  margin-left: 15px;
}
.order-message {
  display: flex;
  height: 30px;
  overflow: hidden;
  margin-top: 8px;
}
.user-name {
  width: 30%;
  height: 15px;
}
.user-address {
  width: 100%;
  height: 20px;

}
.count {
  position: absolute;
  top: 21%;
  right: 10px;
}