.addres {
  width: 100vw;
  height: 100vh;
}
.add-address {
  width: 100px;
  border: 1rpx solid black;
  text-align: center;
  padding: 10px 0;
  margin:30px auto;
}
.address-list {
  width: 100vw;
  padding: 10px 5px;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 10px;
  position: relative;
  border-radius: 10px;
}
.address-list-top {
  display: flex;
}
.user-phone {
  margin-left: 8px;
}
.address-list-bottom {
  margin-top: 8px;
}
.delete-address {
  width: 20px;
  height: 20px;
  position: absolute;
  bottom: 10%;
  right: 10px;
}
.del {
  width: 100%;
  height: 100%;
}