/* pages/user/user.wxss */
.user-pic {
  width: 100vw;
  height: 26vh;
  background-color: #fff;
  padding-top: 20px;
  padding-left: 20px;
  box-sizing: border-box;
  display: flex;
  position: relative;
}
.user-name {
  padding-left: 5%;
  padding-top: 10%;
}
.user-icon {
  position: absolute;
  bottom: 10%;
  right: 2%;
}
.user-detail {
  display: flex;
  width: 100vw;
  height: 50px;
  background-color: #fff;
  margin-top: 10px;
  line-height: 50px;
  padding-left: 10px;
  position: relative;
}
.user-detail-icon {
  position: absolute;
  right: 18px;
  top: 25%;
}
.user-img {
  width: 100px;
  height: 100px;
  background-color: #ddd;
  border-radius: 999px;
  overflow: hidden;
}
.user-img image{
  width: 100%;
  height: 100%;
}