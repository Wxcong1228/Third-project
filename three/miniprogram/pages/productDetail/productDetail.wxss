.productDetail {
  width: 100vw;
  height: 100vh;
  background-color: #f1f1f1;
  position: relative;
  overflow: auto;
}
.productDetail-pic {
  width: 100vw;
}
.productDetail-pic image{
  width: 100vw;
  height: 100vw;
}
.productDetail-all {
  width: 100vw;
  border-radius: 10px;
  background-color: #fff;
  padding: 10px;
  box-sizing: border-box;
}
.productDetail-detail {
  font-size: 12px;
  color: #9d9d9d;
}
.productDetail-name {
  font-weight: bold;
  padding: 10px 0;
}

.productDetail-btn {
  position: fixed;
  width: 100vw;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  justify-content: space-between;
  overflow: hidden;
  z-index: 999;
  padding: 10px 0;
}
.btn1 {
  width: 30px;
  height: 30px;
}
.productDetail-pic1 {
  margin-left: 10px;
}
.productDetail-price {
  width: 60px;
  color: #000;
  font-size: 20px;
  margin-left: 1%;
}
.productDetail-addCar {
  background-color: #ee9622;
  border-bottom-left-radius: 999px;
  border-top-left-radius: 999px;
  line-height: 40px;
  font-size: 13px;
  padding: 0 9.1px;
  color: #fff;
  /* margin-left: 23%; */
}
.Introduction {
  width: 100vw;
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  background-color: #fff;

}
.Introduction-item1 {
 width: 33.3333%;
}
.Introduction-tab {
  width: 100%;
  text-align: center;
  color: #9d9d9d;
  padding: 5px 0;
  
}
.Introduction-content {
  width: 100%;
  text-align: center;
  color: #9d9d9d;
  padding: 5px 0;
}
.productDetail-submit {
  background-color: #EB6E2D;
  line-height: 40px;
  height: 40px;
  color: #fff;
  text-align: center;
  font-size: 13px;
  width: 80px;
  border-bottom-right-radius: 999px;
  border-top-right-radius: 999px;
}
.recommend-product {
  margin-top: 10px;
  margin-bottom: 55px;
  width: 100%;
  text-align: center;
  background-color: #fff;
  padding: 10px 0;
}
.a {
  width: 100%;
  padding: 10px 22px;
}
.num {
  position: absolute;
  width: 15px;
  height: 15px;
  left: 9%;
  top: 10%;
  font-size: 12px;
  text-align: center;
  border-radius: 999px;
  background-color: #EB6E2D;
}
.to{
  display: flex;
  margin-right: 1%;
}